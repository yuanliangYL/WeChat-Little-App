  flex-direction: column;
  align-items: center;
  background-color: sandybrown;

}

/*margin(上右下左)外边距，padding内边距*/
#userinfo-avatar {
  background-color: green;
  width: 228rpx;
  height: 228rpx;
  /*min-width max-width:*//*min-height max-height*/

  margin: 20px 60rpx;
  padding:20rpx;

  /*边框*/
  /*border-radius: 20%;*/
  /*border-width:
  border-color:
   border-style:*/
  border-width: 10px;
  border-color: red;
  border-style: outset;
  /*border:10px solid #ddd      简写方式*/
}


/*:active点击效果*/
/*focus输入框变化*/
#userinfo-avatar:active {
  background-color: fuchsia;
  width: 118rpx;
  height: 118rpx;
  margin: 20px 60rpx;
  padding:20rpx;
  border-width: 10px;
  border-color: red;
  border-style: outset;

}



.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

view [bindtap="bindViewTap"][bindtap="bindViewTap"] {
  background-color: darkred;
}

