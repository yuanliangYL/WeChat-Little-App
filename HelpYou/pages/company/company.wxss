page {
  height: 100%;
}

.downView {
  width: 100%;
  height: 80%;
  position: absolute;
  bottom: 0;
  background-color: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
}

swiper {
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}

.contentView {
  width: 90%;
  height: 75%;
  background-color: ghostwhite;
  border-radius: 5%;
  position: absolute;
  bottom: 5%;
  left: 5%;
}

.imageView {
  width: 100%;
  height: 40%;
  background-color: ghostwhite;
  border-radius: 10%;
  position: relative;
}

.imageView image {
  width: 40%;
  height: 150%;
  position: absolute;
  top: -55%;
  border-radius: 20rpx;
  left: 30%;
}

.textView {
  width: 96%;
  height: 56%;
  border-radius: 5%;
 
  margin-left: 2%;
}

.text1 {
  font-size: x-large;
  margin: 15rpx;
}

.textDetail {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5%;
  height: 80%;

}

.text2 {
  margin: 20rpx 10rpx 10rpx 10rpx;
  font-size: medium;
